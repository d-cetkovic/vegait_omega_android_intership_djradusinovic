<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_item_pass"
    android:layout_marginBottom="16dp"
    >

    <ImageView
        android:id="@+id/itemPasslistImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:background="@drawable/border_item_image_view"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemPasslistConstraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/itemPasslistImageView"
        app:layout_constraintBottom_toBottomOf="@id/itemPasslistImageView"
        app:layout_constraintStart_toEndOf="@id/itemPasslistImageView"
        android:layout_marginStart="20dp"
        android:background="@color/transparent"
        >

    <TextView
        android:id="@+id/itemPasslistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/title_placeholder"
        android:background="@color/transparent"
        />
    <TextView
        android:id="@+id/itemPasslistSubtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_placeholder"
        app:layout_constraintTop_toBottomOf="@id/itemPasslistTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:textColor="@color/subtitleItemListpassColor"
        android:background="@color/transparent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>